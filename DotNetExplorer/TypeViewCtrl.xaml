<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="Transparent"
             mc:Ignorable="d"
             x:Class="DotNetExplorer.TypeViewCtrl">
  <Grid>
    <Border BorderThickness="1" BorderBrush="Black"/>
    <StackPanel Margin="1">
      <StackPanel x:Name="HeaderPanel" Margin="5">
        <TextBlock>Type Name</TextBlock>
      </StackPanel>
      <Border Background="Black" Height="1"/>
      <StackPanel x:Name="FieldsPanel" Margin="5">
        <TextBlock>Field one</TextBlock>
        <TextBlock>Field two</TextBlock>
        <TextBlock>Field three</TextBlock>
      </StackPanel>
      <Border Background="Black" Height="1"/>
      <StackPanel x:Name="PropsPanel" Margin="5">
        <TextBlock>Property one</TextBlock>
        <TextBlock>Property two</TextBlock>
        <TextBlock>Property three</TextBlock>
      </StackPanel>
      <Border Background="Black" Height="1"/>
      <StackPanel x:Name="MethodsPanel" Margin="5">
        <TextBlock>Method one</TextBlock>
        <TextBlock>Method two</TextBlock>
        <TextBlock>Method three</TextBlock>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
